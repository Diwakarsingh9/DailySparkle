<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apporio.dailysparkle.MainActivity"
    android:orientation="vertical"

    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top|center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            android:layout_marginTop="10dp">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lindsayfield Lodge"
                android:id="@+id/mh"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="right|center"
                android:textColor="@color/textblue"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:layout_gravity="left|center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img"
                android:layout_gravity="center|right"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/tree" />
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="#455560"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/logogrey"
                android:scaleType="fitCenter" />

            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THIS WEEKS EDITIONS"
                android:id="@+id/rgh"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left|center"
                android:textColor="#000"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:layout_gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14dp" />
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29 August 2016"
                android:id="@+id/first"
                android:background="@drawable/bgsign"
                android:gravity="left|center"
                android:textColor="#ffffff"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_gravity="left|center"
                android:paddingLeft="12dp"

                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16dp" />
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29 August 2016"
                android:id="@+id/second"
                android:background="@drawable/bgsign"
                android:gravity="left|center"
                android:textColor="#ffffff"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"

                android:layout_gravity="left|center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp" />
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29 August 2016"
                android:id="@+id/third"
                android:background="@drawable/bgsign"
                android:gravity="left|center"
                android:textColor="#ffffff"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_gravity="left|center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp" />
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29 August 2016"
                android:id="@+id/fourth"
                android:background="@drawable/bgsign"
                android:gravity="left|center"
                android:textColor="#ffffff"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_gravity="left|center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp" />
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29 August 2016"
                android:id="@+id/fifth"
                android:background="@drawable/bgsign"
                android:gravity="left|center"
                android:textColor="#ffffff"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_gravity="left|center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp" />
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29 August 2016"
                android:id="@+id/sixth"
                android:background="@drawable/bgsign"
                android:gravity="left|center"
                android:textColor="#ffffff"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_gravity="left|center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp" />
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29 August 2016"
                android:id="@+id/seven"
                android:background="@drawable/bgsign"
                android:gravity="left|center"
                android:textColor="#ffffff"
                geekui:customTypeface="fonts/gill_bold.ttf"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_gravity="left|center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp" />

            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="#455560"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
        <!--</ScrollView>-->
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gif1"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:alpha="0.4"></LinearLayout>

            <com.cunoraz.gifview.library.GifView
                android:id="@+id/gif12"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:visibility="visible"
                android:layout_gravity="center"
                custom:gif="@drawable/splash"
                android:layout_weight="1" />

        </FrameLayout>
    </LinearLayout>
</FrameLayout>
